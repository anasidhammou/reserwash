<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AutoClean.Profile.CarActivity">

    <TextView
        android:textColor="#63b23d"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My car" />

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/audi"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audi" />

        <TextView
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tlcv756" />


    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/mercredes"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercedes" />

        <TextView
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tlcv756" />


    </LinearLayout>

    <Button
        android:onClick="AddNewCar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#63b23d"
        android:layout_marginTop="240dp"
        android:text="Add new Car"
        android:textSize="18sp"
        app:cornerRadius="10dp" />

</LinearLayout>