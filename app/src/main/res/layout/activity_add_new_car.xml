<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AutoClean.AddNewCarActivity">

    <TextView
        android:layout_gravity="center"
        android:textColor="#63b23d"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Car" />

    <TextView
        android:layout_marginLeft="15dp"
        android:textColor="#63b23d"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marque" />

    <Spinner
        android:paddingLeft="10dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:layout_margin="20dp"
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        />

    <TextView
        android:layout_marginLeft="15dp"
        android:textColor="#63b23d"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ModÃ¨le" />

    <Spinner
        android:paddingLeft="10dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:layout_margin="20dp"
        android:id="@+id/spinner4"
        android:layout_width="match_parent" />

    <TextView
        android:layout_marginLeft="15dp"
        android:textColor="#63b23d"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Immatricule" />

    <EditText
        android:background="@drawable/custom_edittext"
        android:layout_margin="20dp"
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:inputType="text"
        android:hint="Immatricule" />

    <TextView
        android:layout_marginLeft="15dp"
        android:textColor="#63b23d"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Couleur" />

    <EditText
        android:background="@drawable/custom_edittext"
        android:layout_margin="20dp"
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:inputType="text"
        android:hint="couleur" />

    <Button
        android:onClick="AddNewCar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#63b23d"
        android:text="Add new Car"
        android:textSize="18sp"
        app:cornerRadius="10dp" />
</LinearLayout>